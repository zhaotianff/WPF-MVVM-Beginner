<tianxia:BlurWindow x:Class="_1_ComplexDataObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1_ComplexDataObject"
        xmlns:tianxia="clr-namespace:TianXiaTech;assembly=BlurWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <tianxia:BlurWindow.Background>
        <SolidColorBrush Color="White" Opacity=".9"></SolidColorBrush>
    </tianxia:BlurWindow.Background>
    <TabControl>
        <TabItem Header="Book" Name="tab_Book">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image Source="{Binding CoverImageUrl}" Stretch="Uniform" Margin="20"></Image>

                <StackPanel Grid.Column="1">
                    <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding Title}" FontSize="25" FontWeight="Bold" Margin="10"></TextBlock>
                    <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding Descrption}" FontSize="20" Foreground="Silver" Margin="10"></TextBlock>
                    <Separator Height="1" Foreground="Silver" Margin="10"></Separator>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Label Content="作者:"></Label>
                        <Label Content="{Binding Author}" Foreground="Silver"  ></Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Label Content="出版社:"></Label>
                        <Label Content="{Binding Publish}" Foreground="Silver"  ></Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Label Content="价格 ￥: " Foreground="Red" FontWeight="Bold"></Label>
                        <Label Content="{Binding Price}" Foreground="Silver"  ></Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Label Content="出版日期:"></Label>
                        <Label Content="{Binding Date}" Foreground="Silver"  ></Label>
                    </StackPanel>

                    <Button Content="修改价格" HorizontalAlignment="Center" Width="88" Height="28" Click="btn_ModifyBook_Click"></Button>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="ObservableBook" Name="tab_ObservableBook">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image Source="{Binding CoverImageUrl}" Stretch="Uniform" Margin="20"></Image>

                <StackPanel Grid.Column="1">
                    <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding Title}" FontSize="25" FontWeight="Bold" Margin="10"></TextBlock>
                    <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding Descrption}" FontSize="20" Foreground="Silver" Margin="10"></TextBlock>
                    <Separator Height="1" Foreground="Silver" Margin="10"></Separator>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Label Content="作者:"></Label>
                        <Label Content="{Binding Author}" Foreground="Silver"  ></Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Label Content="出版社:"></Label>
                        <Label Content="{Binding Publish}" Foreground="Silver"  ></Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Label Content="价格 ￥: " Foreground="Red" FontWeight="Bold"></Label>
                        <Label Content="{Binding Price}" Foreground="Silver"  ></Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Label Content="出版日期:"></Label>
                        <Label Content="{Binding Date}" Foreground="Silver"  ></Label>
                    </StackPanel>

                    <Button Content="修改价格" HorizontalAlignment="Center" Width="88" Height="28" Click="btn_ModifyObservableBook_Click"></Button>
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</tianxia:BlurWindow>
