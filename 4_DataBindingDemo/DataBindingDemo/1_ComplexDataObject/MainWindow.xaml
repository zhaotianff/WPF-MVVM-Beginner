<tianxia:BlurWindow x:Class="_1_ComplexDataObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1_ComplexDataObject"
        xmlns:tianxia="clr-namespace:TianXiaTech;assembly=BlurWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <tianxia:BlurWindow.Background>
        <SolidColorBrush Color="White" Opacity=".9"></SolidColorBrush>
    </tianxia:BlurWindow.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Source="{Binding CoverImageUrl}" Stretch="Uniform" Margin="20"></Image>

        <StackPanel Grid.Column="1">
            <Label Content="{Binding Title}" FontSize="20" FontWeight="Bold"></Label>
        </StackPanel>
    </Grid>
</tianxia:BlurWindow>
